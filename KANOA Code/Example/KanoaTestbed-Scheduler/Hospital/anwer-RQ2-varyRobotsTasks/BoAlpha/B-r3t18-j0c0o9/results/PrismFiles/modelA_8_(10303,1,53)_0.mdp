//r1 velocity:1.0
const int travelr1at1Rock_5=22 ;// from location: l3d (robot initial loc) to location: l2b (at1Rock_5)    distance:22
const int travelr1at2_10=32 ;// from location: l2b (at1Rock_5) to location: l3e(at2_10)    distance:32
const int travelr1at1_11=10 ;// from location: l3e (at2_10) to location: l3f(at1_11)    distance:10
