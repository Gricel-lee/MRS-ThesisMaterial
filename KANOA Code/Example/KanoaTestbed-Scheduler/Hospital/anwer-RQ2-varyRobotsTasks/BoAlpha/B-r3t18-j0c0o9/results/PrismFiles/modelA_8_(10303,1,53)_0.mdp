const int travelr2at1Rock_1=22 ;// from location: l2a (at2Rock_4) to location: l1c(at1Rock_1)    distance:22
const int travelr2at2_8=22 ;// from location: l1c (at1Rock_1) to location: l3d(at2_8)    distance:22
